generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_POSTGRES_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // Champ spécifique pour supporter le provider Steam qui envoie parfois cette donnée en doublon.
  // Fix: Ensure this field is present for NextAuth Steam provider.
  steamId String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  steamId       String?   @unique
  preferences   String? // JSON string
  isPublic      Boolean   @default(false)
  profileBackgroundUrl String?
  profileBackgroundMode String   @default("URL") // URL, DYNAMIC_LAST, DYNAMIC_RANDOM, STATIC_GAME
  profileBackgroundGameId String?
  platforms     String[]  @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
  sessions Session[]
  library  UserLibrary[]
  tags     Tag[]

  // Social
  followedBy User[] @relation("UserFollows")
  following  User[] @relation("UserFollows")

  // Activity
  activityLogs ActivityLog[]
}

model Game {
  id              String    @id // ID externe (IGDB ou Steam généré)
  title           String
  coverImage      String?
  backgroundImage String? // Image de fond haute qualité (RAWG)
  releaseDate     DateTime?
  description     String?   @db.Text

  // Media
  screenshots String[]
  videos      String[] // trailers

  // External Links
  steamUrl      String?
  opencriticUrl String?
  igdbUrl       String?
  hltbUrl       String?

  // Scores
  opencriticScore Int?
  igdbScore       Int?

  // Steam Specific
  steamAppId         String? @unique
  steamReviewScore   String?
  steamReviewCount   Int?
  steamReviewPercent Int?
  isDlc              Boolean @default(false)

  igdbId    String? @unique // Indexé pour recherche rapide
  studio    String? // Nom du studio/développeur
  genres    String? // JSON string
  platforms Json? // Structure: [{ name: "Switch", date: "2017-10-27" }]
  
  // DLC Hierarchy
  parentId  String?
  parent    Game?   @relation("GameToDLC", fields: [parentId], references: [id])
  dlcs      Game[]  @relation("GameToDLC")

  // Playtime Data
  igdbTime       Json? // { storyline, completionist }

  // New Metadata (IGDB)
  storyline      String? @db.Text
  status         Int?    // IGDB Game Status
  gameType       Int?    // IGDB Game Type
  relatedGames   Json?   // { dlcs, expansions, remakes, remasters, expanded_games } (IDs & Names)

  dataMissing Boolean   @default(false)
  dataFetched Boolean   @default(false)

  hltbMain          Int? // En minutes
  hltbExtra         Int?
  hltbCompletionist Int?

  // Predicted Data (Model)
  predictedMain          Float? // En heures (précision décimale utile)
  predictedExtra         Float?
  predictedCompletionist Float?

  // Crowdsourced Data (Users)
  usersMain               Int? // Median in minutes
  usersMainCount          Int? // Number of submissions
  usersExtra              Int?
  usersExtraCount         Int?
  usersCompletionist      Int?
  usersCompletionistCount Int?

  primaryColor   String?
  secondaryColor String?

  imageStatus    String        @default("OK") // OK, BROKEN

  // Extended Metadata
  franchise      String?
  hypes          Int?
  summary        String?       @db.Text // Distinct from description?
  keywords       String[]      // Array of strings
  themes         String[]      // Array of strings (IGDB Themes specific)
  
  // JSON lists for explicit tracking if not using Relations
  ports          Json?         // [{ id, name }]
  remakes        Json?
  remasters      Json?

  updatedAt    DateTime      @updatedAt
  users        UserLibrary[]
  activityLogs ActivityLog[]
}

model UserLibrary {
  id                     String   @id @default(cuid())
  userId                 String
  gameId                 String
  status                 String   @default("BACKLOG") // BACKLOG, PLAYING, COMPLETED, ABANDONED, WISHLIST
  playtimeSteam          Int      @default(0) // En minutes
  playtime2weeks         Int      @default(0) // En minutes (Steam Recent)
  playtimeManual         Int? // Override
  playtimeMain           Int? // User's self-reported Main Story time (minutes)
  playtimeExtra          Int? // User's self-reported Main + Extra time (minutes)
  playtimeCompletionist  Int? // User's self-reported 100% time (minutes)
  progressManual         Int? // Percentage 0-100 manual override
  targetedCompletionType String   @default("MAIN")
  lastPlayed             DateTime? // Synced from Steam rtime_last_played

  customCoverImage String?
  primaryColor     String?
  secondaryColor   String?

  ownedPlatforms   String[] @default([])

  createdAt              DateTime @default(now())
  user                   User     @relation(fields: [userId], references: [id])
  game                   Game     @relation(fields: [gameId], references: [id])
  tags                   Tag[]

  @@unique([userId, gameId])
}

model Tag {
  id        String        @id @default(cuid())
  name      String
  userId    String
  user      User          @relation(fields: [userId], references: [id])
  libraries UserLibrary[]

  @@unique([userId, name])
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  gameId    String
  type      String // e.g., "PLAY_SESSION", "STATUS_CHANGE"
  details   Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([gameId])
}
