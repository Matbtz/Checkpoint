generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Nom exact Vercel/Supabase
  directUrl = env("DIRECT_URL") // Nom exact Vercel/Supabase
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // Champ spécifique pour supporter le provider Steam qui envoie parfois cette donnée en doublon.
  // Fix: Ensure this field is present for NextAuth Steam provider.
  steamId String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  steamId       String?   @unique
  preferences   String? // JSON string
  isPublic      Boolean   @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
  sessions Session[]
  library  UserLibrary[]
  tags     Tag[]

  // Social
  followedBy User[] @relation("UserFollows")
  following  User[] @relation("UserFollows")

  // Activity
  activityLogs ActivityLog[]
}

model Game {
  id              String    @id // ID externe (IGDB ou Steam généré)
  title           String
  coverImage      String?
  backgroundImage String? // Image de fond haute qualité (RAWG)
  releaseDate     DateTime?
  description     String?   @db.Text

  // Media
  screenshots String[]
  videos      String[] // trailers

  // External Links
  steamUrl      String?
  opencriticUrl String?
  igdbUrl       String?
  hltbUrl       String?

  // Scores
  rawgRating Float? // Note des joueurs (sur 5 ou 10)
  metacritic Int? // Score critique (souvent via RAWG) - Keeping for legacy
  opencritic Int? // Score OpenCritic (RapidAPI) - Keeping for legacy

  metacriticScore Int?
  opencriticScore Int?
  igdbScore       Int?

  // Steam Specific
  steamAppId         String? @unique
  steamReviewScore   String?
  steamReviewCount   Int?
  steamReviewPercent Int?
  isDlc              Boolean @default(false)

  igdbId    String? @unique // Indexé pour recherche rapide
  studio    String? // Nom du studio/développeur
  genres    String? // JSON string
  platforms Json? // Structure: [{ name: "Switch", date: "2017-10-27" }]

  // Playtime Data
  timeToBeat     Json? // { main, extra, completionist }
  igdbTime       Json? // { storyline, completionist }
  customPlaytime Int? // Computed field (in minutes)

  hltbTimes String? // JSON string for HLTB times
  scores    String? // JSON string for scores (metacritic, user rating)

  dataMissing Boolean   @default(false)
  dataFetched Boolean   @default(false)
  lastSync    DateTime? // Pour savoir quand on a mis à jour pour la dernière fois

  hltbMain          Int? // En minutes
  hltbExtra         Int?
  hltbCompletionist Int?

  primaryColor   String?
  secondaryColor String?

  updatedAt    DateTime      @updatedAt
  users        UserLibrary[]
  activityLogs ActivityLog[]
}

model UserLibrary {
  id                     String   @id @default(cuid())
  userId                 String
  gameId                 String
  status                 String   @default("BACKLOG") // BACKLOG, PLAYING, COMPLETED, ABANDONED, WISHLIST
  playtimeSteam          Int      @default(0) // En minutes
  playtimeManual         Int? // Override
  progressManual         Int? // Percentage 0-100 manual override
  targetedCompletionType String   @default("MAIN")

  customCoverImage String?
  primaryColor     String?
  secondaryColor   String?

  createdAt              DateTime @default(now())
  user                   User     @relation(fields: [userId], references: [id])
  game                   Game     @relation(fields: [gameId], references: [id])
  tags                   Tag[]

  @@unique([userId, gameId])
}

model Tag {
  id        String        @id @default(cuid())
  name      String
  userId    String
  user      User          @relation(fields: [userId], references: [id])
  libraries UserLibrary[]

  @@unique([userId, name])
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  gameId    String
  type      String // e.g., "PLAY_SESSION", "STATUS_CHANGE"
  details   Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([gameId])
}
